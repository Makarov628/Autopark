@page
@{
    ViewData["Title"] = "Автопарк - Главная";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-8 col-lg-6">
                <div class="text-center mb-5">
                    <i class="fas fa-truck fa-4x text-primary mb-4"></i>
                    <h1 class="display-4 text-gray-900 mb-3">Автопарк</h1>
                    <p class="lead text-muted">Система управления автопарком</p>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-lg h-100">
                            <div class="card-body text-center p-5">
                                <i class="fas fa-user-tie fa-3x text-primary mb-3"></i>
                                <h4 class="card-title">Кабинет менеджера</h4>
                                <p class="card-text text-muted">
                                    Управление предприятиями, водителями и транспортными средствами
                                </p>
                                <a href="/Manager/Login" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Войти как менеджер
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="card shadow-lg h-100">
                            <div class="card-body text-center p-5">
                                <i class="fas fa-desktop fa-3x text-info mb-3"></i>
                                <h4 class="card-title">Веб-интерфейс</h4>
                                <p class="card-text text-muted">
                                    Полнофункциональное веб-приложение с современным интерфейсом
                                </p>
                                <a href="/app" class="btn btn-info btn-lg">
                                    <i class="fas fa-external-link-alt me-2"></i>
                                    Открыть приложение
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Выберите подходящий интерфейс для работы с системой
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 