@page
@model Autopark.Web.Pages.Manager.VehiclesModel
@{
    ViewData["Title"] = "Транспортные средства";
    Layout = "_ManagerLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-truck me-2"></i>
                    Транспортные средства
                </h1>
                <div class="text-muted">
                    <i class="fas fa-user-circle me-2"></i>
                    <span>@Model.CurrentManagerName</span>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    <!-- Фильтры -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-filter me-2"></i>
                        Фильтры
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Предприятие</label>
                            <select name="enterpriseId" class="form-select">
                                <option value="">Все предприятия</option>
                                @foreach (var enterprise in Model.Enterprises)
                                {
                                        <option value="@enterprise.Id" @(Model.SelectedEnterpriseId == enterprise.Id ? "selected" : "")>
                                            @enterprise.Name
                                        </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Поиск</label>
                            <input type="text" name="search" class="form-control" value="@Model.SearchTerm" placeholder="Название или номер">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Сортировка</label>
                            <select name="sortBy" class="form-select">
                                <option value="">По умолчанию</option>
                                <option value="name" @(Model.SortBy == "name" ? "selected" : "")>По названию</option>
                                <option value="purchasedate" @(Model.SortBy == "purchasedate" ? "selected" : "")>По дате покупки</option>
                                <option value="price" @(Model.SortBy == "price" ? "selected" : "")>По цене</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-1"></i>
                                    Применить
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Список автомобилей -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-list me-2"></i>
                        Список автомобилей (@Model.Vehicles.Count)
                    </h6>
                    <div>
                        <button class="btn btn-sm btn-outline-secondary" onclick="exportToCSV('#vehiclesTable', 'vehicles.csv')">
                            <i class="fas fa-download me-1"></i>
                            Экспорт
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Vehicles.Any())
                    {
                            <div class="table-responsive">
                                <table class="table table-hover table-sortable" id="vehiclesTable">
                                    <thead>
                                        <tr>
                                            <th data-sort="name" style="cursor: pointer;">
                                                <i class="fas fa-sort me-1"></i>Название
                                            </th>
                                            <th data-sort="registration" style="cursor: pointer;">
                                                <i class="fas fa-sort me-1"></i>Номер
                                            </th>
                                            <th data-sort="enterprise" style="cursor: pointer;">
                                                <i class="fas fa-sort me-1"></i>Предприятие
                                            </th>
                                            <th data-sort="purchasedate" style="cursor: pointer;">
                                                <i class="fas fa-sort me-1"></i>Дата покупки
                                            </th>
                                            <th data-sort="price" style="cursor: pointer;">
                                                <i class="fas fa-sort me-1"></i>Цена
                                            </th>
                                            <th data-sort="mileage" style="cursor: pointer;">
                                                <i class="fas fa-sort me-1"></i>Пробег
                                            </th>
                                            <th>Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var vehicle in Model.Vehicles)
                                        {
                                                <tr>
                                                    <td data-name="@vehicle.Name">
                                                        <strong>@vehicle.Name</strong>
                                                        <br>
                                                        <small class="text-muted">@vehicle.Color</small>
                                                    </td>
                                                    <td data-registration="@vehicle.RegistrationNumber">
                                                        <span class="badge bg-primary">
                                                            <i class="fas fa-hashtag me-1"></i>
                                                            @vehicle.RegistrationNumber
                                                        </span>
                                                    </td>
                                                    <td data-enterprise="@vehicle.EnterpriseName">
                                                        <i class="fas fa-building me-1 text-muted"></i>
                                                        @vehicle.EnterpriseName
                                                    </td>
                                                    <td data-purchasedate="@(vehicle.PurchaseDate?.ToString("yyyy-MM-dd"))">
                                                        @if (vehicle.PurchaseDate.HasValue)
                                                        {
                                                                <span class="badge bg-info">
                                                                    <i class="fas fa-calendar me-1"></i>
                                                                    @vehicle.PurchaseDate.Value.ToString("dd.MM.yyyy")
                                                                </span>
                                                                <br>
                                                                <small class="text-muted">
                                                                    <i class="fas fa-clock me-1"></i>
                                                                    @vehicle.PurchaseDate.Value.ToString("HH:mm")
                                                                </small>
                                                        }
                                                        else
                                                        {
                                                                <span class="text-muted">Не указана</span>
                                                        }
                                                    </td>
                                                    <td data-price="@vehicle.Price">
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-ruble-sign me-1"></i>
                                                            @vehicle.Price.ToString("N0")
                                                        </span>
                                                    </td>
                                                    <td data-mileage="@vehicle.MileageInKilometers">
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-road me-1"></i>
                                                            @vehicle.MileageInKilometers.ToString("N0") км
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <button type="button" 
                                                                    class="btn btn-sm btn-outline-primary" 
                                                                    data-bs-toggle="tooltip" 
                                                                    title="Просмотр деталей"
                                                                    onclick="viewVehicleDetails(@vehicle.Id)">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                            <button type="button" 
                                                                    class="btn btn-sm btn-outline-secondary" 
                                                                    data-bs-toggle="tooltip" 
                                                                    title="Редактировать"
                                                                    onclick="editVehicle(@vehicle.Id)">
                                                                <i class="fas fa-edit"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                    }
                    else
                    {
                            <div class="text-center py-5">
                                <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Нет автомобилей</h5>
                                <p class="text-muted">У вас пока нет доступных автомобилей.</p>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно для деталей автомобиля -->
<div class="modal fade" id="vehicleDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-truck me-2"></i>
                    Детали автомобиля
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="vehicleDetailsContent">
                <!-- Контент будет загружен динамически -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            function viewVehicleDetails(vehicleId) {
                // Загрузка деталей автомобиля
                loadData(`/Manager/VehicleDetails/${vehicleId}`, '#vehicleDetailsContent', 'Загрузка деталей...');
        
                // Показ модального окна
                const modal = new bootstrap.Modal(document.getElementById('vehicleDetailsModal'));
                modal.show();
            }

            function editVehicle(vehicleId) {
                // Перенаправление на страницу редактирования
                window.location.href = `/Manager/VehicleEdit/${vehicleId}`;
            }
        </script>
}